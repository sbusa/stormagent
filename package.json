{
	"name": "stormagent",
	"description": "stormagent provides base agent functionality for all stormstack components",
	"version": "0.2.9",
	"author": "Peter K. Lee <peter@intercloud.net>",
	"homepage": "http://stormstack.org",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git://github.com/stormstack/stormagent.git"
	},
	"dependencies": {
		"zappajs": "0.4.x",
		"morgan": "1.0.x",
	    "passport" :"0.2.x",
	    "passport-http" :"0.2.x",
		"request": "2.34.x",
		"json-schema": "0.2.0",
		"async": "0.8.x",
		"node-uuid": "1.3.x",
		"minimist":"0.1.0",
		"find-in-path":"0.0.x",
		"pem": "1.4.x",
		"dirty": "0.9.x"
	},
	"devDependencies": {
		"coffee-script": ">=1.3"
	},
	"optionalDependencies": {},
	"engines": {
		"node": ">=0.6.x"
	},
	"main": "./lib/stormagent",
	"config": {
		"port": 5000,
		"logfile": "/var/log/stormagent.log",
		"datadir": "/var/stormstack",
		"repeatdelay": 5000,
		"storm": {
			"functions": [
				"agent.status",
				"agent.run",
				"agent.import",
				"agent.execute",
				"agent.activate",
				"registry.add",
				"registry.get",
				"registry.remove",
				"registry.update",
				"registry.list",
				"registry.expires"
			],
			"events": [
				"agent.running",
				"agent.activated",
				"registry.added",
				"registry.removed",
				"registry.updated",
				"registry.expired",
				"registry.load"
			],
			"plugins": [
				"./lib/plugin"
			]
		}
	},
	"scripts": {
		"prepublish": "mkdir -p lib; coffee -o lib -c src",
		"start": "node --expose-gc lib/stormagent"
	},
	"contributors": [
		"Suresh Kumar"
	]
}
